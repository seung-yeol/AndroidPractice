<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.presentation.fragment.visibility.VisibleCheckConstraintLayout
        android:id="@+id/orange"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF9800"
        app:layout_constraintBottom_toTopOf="@id/orangeOnOff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.presentation.fragment.visibility.VisibleCheckConstraintLayout
            android:id="@+id/blue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#00BCD4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.example.presentation.fragment.visibility.VisibleCheckConstraintLayout>

    <TextView
        android:id="@+id/orangeOnOff"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#FF9800"
        android:gravity="center"
        android:text="orange on/off"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/blueOnOff"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/blueOnOff"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="blue on/off"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/orangeOnOff" />

</androidx.constraintlayout.widget.ConstraintLayout>