<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/mainBack"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:max="100"
            android:padding="40dp"
            android:progress="70"
            android:progressDrawable="@drawable/play_seek_bar"
            android:thumb="@drawable/thumb_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:max="100"
            android:padding="40dp"
            android:progress="50"
            android:progressDrawable="@drawable/play_seek_bar_end"
            android:splitTrack="false"
            android:thumb="@drawable/thumb_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:max="100"
            android:padding="40dp"
            android:progress="30"
            android:progressDrawable="@drawable/play_seek_bar_start"
            android:secondaryProgress="30"
            android:splitTrack="false"
            android:thumb="@drawable/thumb_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/mainPoint"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:max="100"
            android:padding="40dp"
            android:progress="70"
            android:progressDrawable="@drawable/play_seek_bar_transparent"
            android:thumb="@drawable/thumb_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
