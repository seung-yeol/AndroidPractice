<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#91CE20"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/mainBack"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/play_seek_bar"
            android:thumb="@drawable/thumb_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/mainPoint"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="30dp"
            android:max="100"
            android:paddingStart="40dp"
            android:progress="70"
            android:progressDrawable="@drawable/play_seek_bar_transparent"
            android:thumb="@drawable/thumb_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rsb_tick_mark_mode="other" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
